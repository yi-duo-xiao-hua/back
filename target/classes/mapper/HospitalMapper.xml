<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.hello.mapper.HospitalMapper">

    <!-- 结果映射 -->
    <resultMap id="HospitalResultMap" type="com.example.hello.entity.Hospital">
        <id column="hospital_id" property="hospitalId"/>
        <result column="name" property="name"/>
    </resultMap>

    <!-- 查询所有医院列表 -->
    <select id="selectAllHospitals" resultMap="HospitalResultMap">
        SELECT
            hospital_id,
            name
        FROM hospitals
        ORDER BY hospital_id
    </select>

</mapper>

